<!doctype html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Todas las Casas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f4f7fa;
        }

        .header-section {
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            padding: 2rem 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .header-title {
            color: #212529;
        }

        .back-button {
            transition: all 0.2s ease-in-out;
        }

        .back-button:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

        .table-custom {
            background-color: #ffffff;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table-custom thead {
            background-color: #0d6efd;
            color: white;
        }

        .table-custom th,
        .table-custom td {
            padding: 1rem;
            vertical-align: middle;
        }

        .table-custom tbody tr:hover {
            background-color: #e9ecef;
        }

        .table-image {
            width: 100px;
            height: 70px;
            object-fit: cover;
            border-radius: 8px;
            cursor: pointer;
            /* Añade un cursor de puntero para indicar que es clickeable */
            transition: transform 0.2s ease-in-out;
        }

        .table-image:hover {
            transform: scale(1.1);
            /* Efecto de zoom al pasar el mouse */
        }

        .table-custom tr {
            border-bottom: 1px solid #dee2e6;
        }

        .table-custom tr:last-child {
            border-bottom: none;
        }

        /* Estilos para el modal personalizado */
        .modal-content {
            border-radius: 15px;
        }

        .modal-body-custom {
            padding: 0;
        }

        .modal-body-custom img {
            width: 100%;
            height: auto;
            border-radius: 15px;
        }
    </style>
</head>

<body>
    <div class="container-fluid header-section">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="display-4 fw-bold header-title">
                Todas las Casas
            </h1>
            <a href="/auth/sesion" class="btn btn-secondary btn-lg back-button">
                <i class="fas fa-arrow-left"></i> Volver a Sesión
            </a>
        </div>
    </div>

    <div class="container mt-5">
        <% if (casas && casas.length> 0) { %>
            <div class="table-responsive">
                <table class="table table-hover table-custom">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Imagen</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Propietario</th>
                            <th scope="col">Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% casas.forEach(function(casa) { %>
                            <tr>
                                <th scope="row">
                                    <%= casa.id %>
                                </th>
                                <td>
                                    <img src="<%= casa.imagenURL %>" class="table-image" alt="Imagen de la casa"
                                        data-bs-toggle="modal" data-bs-target="#imageModal"
                                        data-image-url="<%= casa.imagenURL %>">
                                </td>
                                <td>
                                    <%= casa.nombre %>
                                </td>
                                <td>
                                    <%= casa.username %>
                                </td>
                                <td>
                                    <i class="fas fa-dollar-sign"></i>
                                    <%= casa.valor %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="alert alert-info text-center" role="alert">
                    No hay casas disponibles para mostrar.
                </div>
                <% } %>
    </div>

    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body modal-body-custom">
                    <img src="" id="modalImage" class="img-fluid" alt="Imagen de la casa ampliada">
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const imageModal = document.getElementById('imageModal');
            imageModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const imageUrl = button.getAttribute('data-image-url');
                const modalImage = imageModal.querySelector('#modalImage');
                modalImage.src = imageUrl;
            });
        });
    </script>
</body>

</html>